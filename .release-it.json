{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "requireBranch": "main",
    "requireCommits": false,
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": { "publish": true },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
